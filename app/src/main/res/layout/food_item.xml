<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">

    <TextView
        android:id="@+id/foodLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding = "5sp"
        android:textSize="18sp"
        tools:text="Angel Hair Pasta with Meatballs"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/quantityLabel"
        android:layout_toStartOf="@+id/quantityLabel"
        android:layout_alignBottom="@+id/removeButton"/>

    <TextView
        android:id="@+id/quantityLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5sp"
        android:textSize="18sp"
        tools:text="100"
        android:layout_alignBaseline="@+id/removeButton"
        android:layout_alignBottom="@+id/removeButton"
        android:layout_toLeftOf="@+id/removeButton"
        android:layout_toStartOf="@+id/removeButton"/>

    <Button
        android:id="@+id/removeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="false"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="false"
        android:layout_alignParentRight="true"
        android:background="@android:color/darker_gray"
        android:padding="8dp"
        android:text="@string/remove"
        android:textColor="@android:color/black"/>

</RelativeLayout>