<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content">

    <TextView
        android:id="@+id/add_dialog_heading"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:text="@string/add_food"
        android:textSize="32sp"
        android:textAlignment="center"/>

    <EditText
        android:id="@+id/add_dialog_foodname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp"
        android:hint="@string/dialog_food_name_hint"/>

    <EditText
        android:id="@+id/add_dialog_quantity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:inputType="number"
        android:hint="@string/dialog_food_quantity_hint"/>

    <Spinner
        android:id="@+id/add_dialog_location_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="4dp"
        android:hint="@string/dialog_food_location_hint"
        android:spinnerMode="dropdown"/>

</LinearLayout>